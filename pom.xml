        <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <spring-boot.version>2.2.5.RELEASE</spring-boot.version>
        <liquibase-maven-plugin.version>4.2.2</liquibase-maven-plugin.version>
        <liquibase-hibernate5.version>4.2.2</liquibase-hibernate5.version>
        <validation-api.version>2.0.1.Final</validation-api.version>
        <itextpdf.version>5.5.10</itextpdf.version>
        <problem-spring-web.version>0.23.0</problem-spring-web.version>
        <commons-compress.version>1.18</commons-compress.version>
        <commons-net.version>3.6</commons-net.version>
        <postgresql.version>42.2.20</postgresql.version>
        <springfox.version>3.0.0</springfox.version>
        <problem-spring-web.version>0.23.0</problem-spring-web.version>
        <jackson-datatype-jts.version>2.4</jackson-datatype-jts.version>
        <jts-core.version>1.16.1</jts-core.version>
        <imgscalr-lib.version>4.2</imgscalr-lib.version>
        <jsoup.version>1.13.1</jsoup.version>
        <commons-io.version>2.6</commons-io.version>
        <jxls.version>2.10.0</jxls.version>
        <jxls-jexcel.version>1.0.9</jxls-jexcel.version>
        <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.itextpdf</groupId>
            <artifactId>itextpdf</artifactId>
            <version>${itextpdf.version}</version>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.liquibase.ext/liquibase-hibernate5 -->
        <dependency>
            <groupId>org.liquibase.ext</groupId>
            <artifactId>liquibase-hibernate5</artifactId>
            <version>${liquibase-hibernate5.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
